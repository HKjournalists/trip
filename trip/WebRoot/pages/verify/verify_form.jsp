<link href="${otapp}/css/style.css" rel="stylesheet" type="text/css" />
<body>

	<div class="logintop">
		<span><spring:message code="login.welcome.title" /></span>
		<ul>
			<li><a href="#"><spring:message code="login.top.link.home" /></a></li>
			<li><a href="#"><spring:message code="login.top.link.help" /></a></li>
			<li><a href="#"><spring:message code="login.top.link.about" /></a></li>
		</ul>
	</div>
	<div class="loginbody">
		<div class="loginbox">
			<div class="login_left">
				<form id="loginForm" method="post" action="${otapp}/login_validate.html">
				<div class="logo"></div>
				<ul>
					<li>
						<input name="username" type="text" class="loginuser"
						value="<spring:message code='login.form.username.value' />"
						onclick="JavaScript:this.value=''" />
					</li>
					<li>
						<input name="password" type="password" class="loginpwd"
						value="<spring:message code='login.form.password.value' />"
						onclick="JavaScript:this.value=''" />
					</li>
					<li>
						<input name="loginBt" type="submit" class="loginbtn"
						value="<spring:message code='login.form.password.btn.login' />"
						 /> 
						<label>
							<input name="" type="checkbox" value="" checked="checked" />
							<spring:message code="login.form.password.remember" />
						</label> 
						<label>
							<a href="#"><spring:message code="login.form.password.forget" /></a>
						</label>
					</li>
				</ul>
				</form>
			</div>
			<div class="login_line"></div>
			<div class="login_right">
				<div class="pic">
					<img src="images/login_pic.png" />
				</div>
				<div class="app">
					<a href="#">
						<div class="pic">
							<img src="images/login_ewm.png" />
						</div>
						<div class="text">
							<spring:message code="login.form.scan.QRCode" />
						</div>
					</a> <a href="#">
						<div class="pic">
							<img src="images/login_phone.png" />
						</div>
						<div class="text">
							<spring:message code="login.form.scan.androidAndIphone" />
						</div>
					</a> <a href="#">
						<div class="pic">
							<img src="images/login_ipad.png" />
						</div>
						<div class="text">
							<spring:message code="login.form.scan.ipad" />
						</div>
					</a>
					<div style="clear: both"></div>
				</div>
			</div>
			<div style="clear: both"></div>
		</div>
	</div>
	<div class="loginbm">
		
	</div>


</body>